{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="table-container">
    <h2>User index</h2>
    <div class="table-con">
    <table class="table">
        <thead>
            <tr>
                {% set direction = currentDirection == 'asc' ? 'desc' : 'asc' %}

                <th><a href="{{ path(app.request.attributes.get('_route'), {'sort': 'id', 'direction': direction}) }}">Id</a></th>
                <th><a href="{{ path(app.request.attributes.get('_route'), {'sort': 'userName', 'direction': direction}) }}">User Name</a></th>
                <th><a href="{{ path(app.request.attributes.get('_route'), {'sort': 'userEmail', 'direction': direction}) }}">User Email</a></th>
                {# <th><a href="{{ path(app.request.attributes.get('_route'), {'sort': 'userPassword', 'direction': direction}) }}">User Password</a></th> #}
                <th><a href="{{ path(app.request.attributes.get('_route'), {'sort': 'userRole', 'direction': direction}) }}">User Role</a></th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userEmail }}</td>
                {# <td>{{ user.userPassword }}</td> #}
                <td>{{ user.userRole|join(', ') }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn-link">Show</a>
                </td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-link">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="form-group">
        <a href="{{ path('app_user_new') }}">Create new</a>
    </div>
</div>
{% endblock %}

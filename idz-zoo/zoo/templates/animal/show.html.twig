{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block javascripts %}
    <script src="/js/validators/AnimalValid.js" defer></script>
{% endblock %}

{% block body %}
    <div class="table-container">
        <h2>Animal</h2>
        <div class="table-con">
            <table class="table">
                <tbody>
                    {# <tr>
                        <th>Id</th>
                        <td>{{ animal.id }}</td>
                    </tr> #}
                    <tr>
                        <th>Animal Name</th>
                        <td>{{ animal.care.animalName }}</td>
                    </tr>
                    <tr>
                        <th>Animal Gender</th>
                        <td>{{ animal.animalGender }}</td>
                    </tr>
                    <tr>
                        <th>Animal Age</th>
                        <td>{{ animal.animalAge }}</td>
                    </tr>
                    <tr>
                        <th>Animal Cage</th>
                        <td>{{ animal.animalCage }}</td>
                    </tr>
                    <tr>
                        <th>Care</th>
                        <td>{{ animal.care.careType }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <a href="{{ path('app_animal_index') }}">Back to list</a>
        </div>
        <div class="form-group">
            <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">Edit</a>
        </div>
    <div class="form-group">
        {{ include('animal/_delete_form.html.twig') }}
    </div>
</div
{% endblock %}
